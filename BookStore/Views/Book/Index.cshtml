@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
               Title
            </th>
            <th>
               Description
            </th>
            <th>
               FullName
            </th>
            <th>
               Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Author.FullName
            </td>
            <td>
                @if(item.ImageUrl!=null)
                {
                   <img src="~/books/@item.ImageUrl" style="width:80px;" class="img-thumbnail">
                }
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Book" asp-route-Id="@item.Id" class="btn btn-info">Edit</a> 
                <a asp-action="Details" asp-controller="Book" asp-route-Id="@item.Id" class="btn btn-primary">Details</a> 
                <a href="/Book/Delete/@item.Id" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
