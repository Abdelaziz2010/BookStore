@model BookStore.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            FullName
        </dt>
        <dd class = "col-sm-10">
            @Model.Author.FullName
        </dd>
        @if(Model.ImageUrl!=null)
        {
            <dt class = "col-sm-2">
                Image:
            </dt>
            <dd class = "col-sm-10">
               <img src="~/books/@Model.ImageUrl"style="width:128px" class="img-thumbnail">
            </dd>
        }
    </dl>   
    <form asp-action="ConfirmDelete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
    </form>
</div>
